<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data>
        <variable name="viewModel" type="io.schiar.tcc.viewmodel.TripViewModel"/>
    </data>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/default_padding"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.ReservationFragment"
        >

            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/default_padding">
                <TextView
                        android:text="@{viewModel.trip.carPreview.name}"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/text_size_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_padding"
                />
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:bitmapLoader="@{viewModel.trip.carPreview.photo}"
                />
            </LinearLayout>

            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/default_padding">
                <TextView
                        android:text="@{viewModel.trip.hotelPreview.name}"
                        android:textSize="@dimen/text_size_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/default_padding"
                />
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:bitmapLoader="@{viewModel.trip.hotelPreview.photo}"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_marginBottom="@dimen/default_padding"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            >
                <TextView
                        android:textSize="@dimen/text_size_title"
                        android:text="@{viewModel.trip.beginDate}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                />
                <TextView
                        android:textSize="@dimen/text_size_title"
                        android:text="@{viewModel.trip.endDate}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            >
                <TextView
                        android:textSize="@dimen/text_size_title"
                        android:text="@{viewModel.trip.adults + ` adultos, ` + viewModel.trip.children + ` crianÃ§as`}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</layout>
